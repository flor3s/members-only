<title>New post</title>
<h1>New post</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @post do |f| %>

      <%= f.label :text %>
      <%= f.text_field :body, class: 'form-control' %>

      <%= f.submit "Create post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>